{{ define "title" }}Create a New Snippet{{end}}

{{ define "main"}}
  <form action="/sni/create" method="POST">
    <div>
      <label>Title:</label>
      <input type="text" name="title" />
    </div>
    <div>
      <label>Content:</label>
      <textarea name="content"></textarea>
    </div>
    <div>
      <label>Delete in:</label>
      <input type="radio" name="expires" value="365">One year</input>
      <input type="radio" name="expires" value="7">One week</input>
      <input type="radio" name="expires" value="1">One day</input>
    </div>
    <div>
      <input type="submit" value="Publish Snippet" />
    </div>
  </form>
{{end}}