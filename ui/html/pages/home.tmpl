{{ define "title" }}Home{{ end }}

{{define "main"}}
    <h2>Latest Snip</h2>
    {{ if .Snippets }}
        <table>
            <tr>Title</tr>
            <tr>Created</tr>
            <tr>ID</tr>
            {{range.Snippets}}
                <tr>
                    <td><a href="/sni/view?id={{.ID}}">{{.Title}}</a></td>
                    <td>{{.Created}}</td>
                    <td>{{.ID}}</td>
                </tr>
            {{end}}
        </table>
    {{ else }}
        <p>Nothing here! yet!</p>
    {{ end }}
{{end}}